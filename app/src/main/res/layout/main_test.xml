<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_result">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_face_verify"
            android:layout_width="110dp"
            android:layout_height="98dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/verify_button_selector1"
            android:onClick="onClick" />

        <ImageButton
            android:id="@+id/btn_face_delete"
            android:layout_width="80dp"
            android:layout_height="79dp"
            android:layout_marginTop="30sp"
            android:layout_toRightOf="@id/btn_face_verify"
            android:background="@drawable/delete_button_selector"
            android:onClick="onClick" />

        <ImageButton
            android:id="@+id/btn_face_enroll"
            android:layout_width="80dp"
            android:layout_height="79dp"
            android:layout_marginTop="30sp"
            android:layout_toLeftOf="@id/btn_face_verify"
            android:background="@drawable/reg_button_selector"
            android:onClick="onClick" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_vocal_demo"
            android:layout_width="110dp"
            android:layout_height="98dp"
            android:background="@drawable/isv_full_button_select"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/btn_face_demo"
            android:layout_width="126dp"
            android:layout_height="111dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="-25dp"
            android:layout_marginTop="34dp"
            android:layout_toLeftOf="@id/btn_vocal_demo"
            android:background="@drawable/face_identify_button_selector"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/btn_mixed_demo"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-32dp"
            android:layout_marginTop="57dp"
            android:layout_toRightOf="@id/btn_vocal_demo"
            android:background="@drawable/mfv_full_button_select"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/btn_groupManager_demo"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_below="@id/btn_vocal_demo"
            android:layout_marginLeft="-8dp"
            android:background="@drawable/group_manager_button_select"
            android:onClick="onClick" />
    </RelativeLayout>
</RelativeLayout>
